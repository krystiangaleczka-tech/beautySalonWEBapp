{
    "chatgpt.commentCodeLensEnabled": false,

    //Add following lines of code to exclude the files & folders which aren't important for watchers to look for changes...

    //excludes files & folders in search indexing
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/env": true,
        "**/venv": true
    },
    //excludes files & folders for watcher service
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        // ...
    },
    
    // Tailwind CSS configuration
    "css.validate": false,
    "scss.validate": false,
    "less.validate": false,
    "tailwindCSS.includeLanguages": {
        "css": "css",
        "scss": "scss",
        "less": "less"
    },
    "tailwindCSS.experimental.classRegex": [
        ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
        ["cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
    ],
    "editor.quickSuggestions": {
        "strings": true
    },
    "tailwindCSS.experimental.configFile": "./admin-frontend/tailwind.config.ts",
    "css.customData": ["./admin-frontend/css.customData.json"]
}